<UserControl x:Class="UnifiedDataExplorer.View.ProcessModeling.ProcessNodesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnifiedDataExplorer.View.ProcessModeling"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="LightGray" Padding="10">
            <ContentControl Content="{Binding NodesNavigationViewModel}"/>
        </Border>

        <Border Grid.Row="0" Grid.Column="1" BorderThickness="1" BorderBrush="LightGray" Padding="10">
            <ContentControl Content="{Binding SelectedProcessNode}" />
        </Border>
    </Grid>
</UserControl>
